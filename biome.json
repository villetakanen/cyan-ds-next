{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
	  "indentStyle": "space"
	},
	"javascript": {
	  "formatter": {
		"quoteStyle": "single",
		"semicolons": "asNeeded"
	  }
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"files": {
	  "ignore": [
		"src/cyan-next/**"
	  ]
	}
}
