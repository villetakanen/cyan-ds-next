---
const { name } = Astro.props;

const style = 'background-color: var(' + name + ')';
---

<div class="palette-color-demo">
  <div class="palette-color-demo__color" style={style}></div>
  <div class="palette-color-demo__name">{name}</div>
</div>

<style>
  .palette-color-demo {
    display: flex;
    align-items: center;
    margin: 0.5rem;
  }

  .palette-color-demo__color {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    margin-right: 10px;
    border: 1px solid var(--color-on-primary);
  }

  .palette-color-demo__name {
    font-size: 14px;
    font-weight: 500;
  }
</style>
