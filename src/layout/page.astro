---
import AppBar from '../components/app-bar.astro';
import AppMenuButton from '../components/app/AppMenuButton.astro';
import Basehead from '../components/basehead.astro';
import Rail from '../components/rail.astro';

const { title } = Astro.props;
---

<html lang="en">
  <Basehead title="Cyan Design System" />
  <body>
    <AppMenuButton />
    <Rail />
    <nav class="cn-app-tray"><slot name="app-tray" /></nav>
    <AppBar title={title || ''} />
    <main class="content-grid">
      <slot />
    </main>
    <cn-snackbar></cn-snackbar>
  </body>
</html>
